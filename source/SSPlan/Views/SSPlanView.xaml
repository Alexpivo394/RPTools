<ui:FluentWindow
    x:Class="SSPlan.Views.SSPlanView"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    Title="WorkingSet"
    Height="450"
    Width="450"
    MinHeight="450"
    MinWidth="400"
    ExtendsContentIntoTitleBar="True">

    <Grid Margin="10,0,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <ui:TitleBar Grid.Row="0"
                     Title="Создать структурную схему"
                     Margin="0,0,0,10">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="AddCircle24"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <!-- Выбор панели -->
        <ui:TextBlock Grid.Row="1" Text="Выберите панель"/>
        
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <ComboBox Grid.Column="0" Height="35"
                      ItemsSource="{Binding Panels}" 
                      SelectedItem="{Binding SelectedPanel, Mode=TwoWay}" 
                      DisplayMemberPath="Name"/>
            <ui:Button Grid.Column="1" Icon="{ui:SymbolIcon Symbol=Cursor24}"
                                       Margin="5,0,0,0"
                                       Height="35"
                                       Command="{Binding SelectPanelCommand}"/>
        </Grid>
        
        <!-- Выбор семейства -->
        
        <ui:TextBlock Grid.Row="3" Text="Выберите семейство аннотации"
                                   Margin="0,10,0,0"/>
        
        <ComboBox Grid.Row="4" Margin="0,10,0,0"
                  ItemsSource="{Binding FamilyItems}" 
                  SelectedItem="{Binding SelectedFamily, Mode=TwoWay}" 
                  DisplayMemberPath="DisplayName"/>
        
        <!-- Выбор смещения -->
        <ui:TextBlock Grid.Row="5" Text="Введите смещение по оси X"
                      Margin="0,10,0,0"/>
        <ui:TextBox Grid.Row="6" PlaceholderText="Введите смещение по оси X"
                                 Margin="0,10,0,0"
                                 Text="{Binding AxisX, Mode=TwoWay}"/>
        
        <ui:TextBlock Grid.Row="7" Text="Введите смещение по оси Y"
                      Margin="0,10,0,0"/>
        <ui:TextBox Grid.Row="8" PlaceholderText="Введите смещение по оси Y"
                                 Margin="0,10,0,0"
                                 Text="{Binding AxisY, Mode=TwoWay}"/>
        

        <!-- Кнопка действия -->
        <StackPanel Grid.Row="9" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0">
            <ui:Button Content="Создать"
                       Command="{Binding RunCommand}"
                       Icon="{ui:SymbolIcon Symbol=Play24}"
                       Appearance="Primary"
                       Width="160"
                       Height="40"
                       Margin="0,0,0,20"/>
        </StackPanel>

        <!-- Переключатель темы -->
        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,0">
            <ui:TextBlock Text="Тема:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ui:ToggleSwitch
                IsChecked="{Binding DataContext.DarkTheme, RelativeSource={RelativeSource AncestorType=ui:FluentWindow}, Mode=TwoWay}"
                OffContent="Светлая"
                OnContent="Тёмная"/>
        </StackPanel>

    </Grid>
</ui:FluentWindow>