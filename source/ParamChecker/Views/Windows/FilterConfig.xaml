<ui:FluentWindow
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    x:Class="ParamChecker.Views.Windows.FilterConfig"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:converters="clr-namespace:ParamChecker.Views.Converters"
    mc:Ignorable="d"
    Title="ParamChecker"
    WindowStartupLocation="CenterScreen"
    Height="600"
    Width="400"
    MinHeight="600"
    MinWidth="400"
    ExtendsContentIntoTitleBar="True">

    <Grid>
        <StackPanel>
            <!-- Title Bar -->
            <ui:TitleBar Title="ParamChecker" Icon="BoxMiltipleSearch24" />
            
            <!-- Category panel -->
            <Border Margin="1" CornerRadius="5" Padding="10" Background="{DynamicResource ControlFillColorDefaultBrush}" BorderBrush="{DynamicResource SystemAccentColorBrush}" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Фильтр по категориям" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ui:TextBox Text="{Binding CategoryFilter, UpdateSourceTrigger=PropertyChanged}"
                            PlaceholderText="Фильтр категорий..."
                            Margin="10,0,10,10"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                        <ItemsControl ItemsSource="{Binding FilteredCategories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding CatName}"
                                              IsChecked="{Binding CatIsSelected}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
            
            <ComboBox Margin="10"
                      Height="20"
                      ItemsSource="{Binding ItemsCatOrPar}"
                      SelectedItem="{Binding SelectedItemCatOrPar, Mode=TwoWay}"/>
            
            <!-- Parameters panels -->
            <Border Margin="1" CornerRadius="5" Padding="10" Background="{DynamicResource ControlFillColorDefaultBrush}" BorderBrush="{DynamicResource SystemAccentColorBrush}" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Фильтр по параметрам" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                        <ItemsControl ItemsSource="{Binding FilterConditions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource SystemAccentColorBrush}" 
                                            BorderThickness="1" 
                                            CornerRadius="5" 
                                            Margin="0,5" 
                                            Padding="5">
                                        <StackPanel>
                                            <ItemsControl ItemsSource="{Binding Conditions}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                                            <ui:TextBox Text="{Binding ParameterName}" 
                                                                       PlaceholderText="Имя параметра" 
                                                                       Width="150"/>
                                                            <ui:TextBox Text="{Binding ParameterValue}" 
                                                                       PlaceholderText="Значение параметра" 
                                                                       Margin="10,0,10,0" 
                                                                       Width="150"/>
                                                            <ui:Button Icon="{ui:SymbolIcon Delete24}" 
                                                                       Command="{Binding RemoveConditionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                       CommandParameter="{Binding}"
                                                                       Appearance="Secondary"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            
                                            <ui:Button Content="Добавить условие"
                                                       Command="{Binding AddSimpleConditionCommand}"
                                                       Margin="0,5,0,0">
                                                <ui:Button.Visibility>
                                                    <Binding Path="Type" ConverterParameter="Group">
                                                        <Binding.Converter>
                                                            <converters:ConditionTypeToVisibilityConverter/>
                                                        </Binding.Converter>
                                                    </Binding>
                                                </ui:Button.Visibility>
                                            </ui:Button>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel x:Name="FiltersContainer"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <ui:Button Content="Простое условие"
                                   Icon="{ui:SymbolIcon AddCircle24}"
                                   Command="{Binding AddSimpleConditionCommand}"
                                   Appearance="Secondary"
                                   Margin="0,0,10,0"/>
                        <ui:Button Content="Групповое условие"
                                   Icon="{ui:SymbolIcon AddCircle24}"
                                   Command="{Binding AddGroupConditionCommand}"
                                   Appearance="Secondary"/>
                    </StackPanel>
                    
                    <ComboBox Margin="10,0,10,0"
                              Height="20"
                              ItemsSource="{Binding ItemsParOrPar}"
                              SelectedItem="{Binding SelectedItemParOrPar, Mode=TwoWay}"/>
                </StackPanel>
            </Border>
            
            <!-- Apply button region -->
            <ui:Button Content="Применить"
                       Icon="{ui:SymbolIcon Checkmark24}"
                       Command="{Binding ApllyFiltersCommand}"
                       Appearance="Primary"
                       Margin="10"/>
        </StackPanel>
    </Grid>
</ui:FluentWindow>