<ui:FluentWindow
    x:Class="QuantityCheck.Views.QuantityCheckView"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    Title="WorkingSet"
    Height="300"
    Width="450"
    MinHeight="250"
    MinWidth="400"
    ExtendsContentIntoTitleBar="True">
    
    

    <Grid Margin="0,0,0,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <ui:TitleBar Grid.Row="0"
                     Title="Создание рабочих наборов"
                     Margin="0,0,0,10">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="AddCircle24"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <!-- Подсказка -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20" HorizontalAlignment="Center">
            <ui:TextBlock Text="Введите имя параметра для записи количества"
                          FontSize="16"
                          FontWeight="SemiBold"
                          TextAlignment="Center"
                          Margin="0,0,0,8"/>
            <ui:TextBox Text="{Binding ParameterName, Mode=TwoWay}"
                        PlaceholderText="Имя параметра"
                        Width="250"
                        Height="40"
                        VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Кнопка действия -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ui:Button Content="Заполнить"
                       Command="{Binding WriteQuantityCommand}"
                       Icon="{ui:SymbolIcon Symbol=Play24}"
                       Appearance="Primary"
                       Width="160"
                       Height="40"
                       Margin="0,0,0,20"/>
        </StackPanel>

        <!-- Переключатель темы -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,0">
            <ui:TextBlock Text="Тема:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ui:ToggleSwitch
                IsChecked="{Binding DataContext.DarkTheme, RelativeSource={RelativeSource AncestorType=ui:FluentWindow}, Mode=TwoWay}"
                OffContent="Светлая"
                OnContent="Тёмная"/>
        </StackPanel>

    </Grid>
</ui:FluentWindow>
