<ui:FluentWindow
    x:Class="WorksetCheck.Views.WorksetCheckView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    mc:Ignorable="d"
    Title="WorksetCheck"
    Width="1100"
    Height="650"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />  <!-- Title -->
            <RowDefinition Height="*" />     <!-- Main -->
            <RowDefinition Height="Auto" />  <!-- Bottom toolbar -->
        </Grid.RowDefinitions>
        
        <ui:TitleBar Grid.Row="0" Title="WorksetCheck">
            <ui:TitleBar.Icon>
                <ui:SymbolIcon Symbol="AppsListDetail24" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
        
        <Border Grid.Row="1" Margin="10,0,10,0" CornerRadius="5" Padding="10"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource SystemAccentColorBrush}" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="Модели для экспорта" FontWeight="Bold" Margin="0,0,0,10" />

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MinHeight="300">
                    <ui:ListView
                        ItemsSource="{Binding Models}"
                        HorizontalContentAlignment="Stretch"
                        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Disabled">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0" Background="{DynamicResource ControlElevationBorderBrush}" Padding="2"
                                        BorderThickness="4,0,0,0" BorderBrush="{DynamicResource SystemAccentColorTertiaryBrush}">
                                <Grid Margin="0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <ui:TextBox
                                            Grid.Row="0"
                                            Text="{Binding ServerPath}"
                                            PlaceholderText="Путь к модели Revit" />
                                        
                                        <Grid Grid.Row="1" Margin="0,5,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <ui:TextBox
                                                Grid.Column="0"
                                                Text="{Binding WorksetForWorkSetsName}"
                                                PlaceholderText="Префикс рабочих наборов свзей" />
                                            
                                            <ui:TextBox
                                                Grid.Column="1"
                                                Text="{Binding WorksetForAxesName}"
                                                Margin="5,0,0,0"
                                                PlaceholderText="Рабочий набор для осей и уровней" />
                                            
                                            <ui:TextBox
                                                Grid.Column="2"
                                                Text="{Binding WorksetForHolesName}"
                                                Margin="5,0,0,0"
                                                PlaceholderText="Рабочий набор заданий на отверстия " />
                                            
                                        </Grid>
                                    </Grid>
                                    <ui:Button
                                        Grid.Column="1"
                                        Icon="{ui:SymbolIcon Symbol=Delete24}"
                                        Command="{Binding DataContext.RemoveModelCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Appearance="Transparent"
                                        VerticalAlignment="Stretch"
                                        Margin="5,0,0,0" />
                                    </Grid>
                                    </Border>
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>
                    </ui:ListView>
                </ScrollViewer>

                <ui:Button Grid.Row="2"
                           Content="Добавить"
                           Icon="{ui:SymbolIcon AddCircle24}"
                           Command="{Binding AddModelCommand}"
                           Appearance="Secondary"
                           Margin="0,10,10,0" />
            </Grid>
        </Border>
        
        <Border Grid.Row="2"
                Background="{DynamicResource ControlBackgroundBrush}"
                Height="48"
                VerticalAlignment="Bottom">
            <DockPanel Margin="10,0">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <ui:Button Content="Импорт" Command="{Binding ImportCommand}" Margin="0,0,10,0" />
                    <ui:Button Content="Экспорт" Command="{Binding ExportCommand}"/>
                    <TextBlock Text="Тема:" VerticalAlignment="Center" Margin="10,0,10,0"/>
                    <ui:ToggleSwitch
                        IsChecked="{Binding DataContext.DarkTheme, RelativeSource={RelativeSource AncestorType=ui:FluentWindow}, Mode=TwoWay}"
                        OffContent="Светлая"
                        OnContent="Темная"/>
                </StackPanel>
                <ui:Button Content="🚀 Запуск"
                           Command="{Binding StartCommand}"
                           DockPanel.Dock="Right"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,0,0"
                           Appearance="Primary" />
            </DockPanel>
        </Border>

    </Grid>
</ui:FluentWindow>
